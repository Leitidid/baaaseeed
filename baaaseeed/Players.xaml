<Window x:Class="baaaseeed.Players"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:baaaseeed"
        mc:Ignorable="d"
        Title="Players" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Margin="20">
            <TextBox x:Name="IDTextBox" IsEnabled="False" />
            <TextBox x:Name="SurnameTextBox" Text="{Binding Фамилия}" Height="45" />
            <TextBox x:Name="NameTextBox" Text="{Binding Имя}" />
            <TextBox x:Name="PatronymicTextBox" Text="{Binding Отчество}" />
            <TextBox x:Name="TeamNameTextBox" Text="{Binding НазваниеКоманды}" />
            <DatePicker x:Name="JoinDatePicker" SelectedDate="{Binding ДатаПриема}" />
            <TextBox x:Name="GoalsTextBox" Text="{Binding ЗаброшенныеШайбы}" />
            <TextBox x:Name="AssistsTextBox" Text="{Binding ГолевыеПодачи}" />
            <TextBox x:Name="PenaltyMinutesTextBox" Text="{Binding ШтрафноеВремя}" />
            <TextBox x:Name="GamesPlayedTextBox" Text="{Binding СыгранныеМатчи}" />
            <Button x:Name="SavePlayer" Content="Сохранить" Click="SavePlayer_Click" />
        </StackPanel>
    </Grid>
</Window>
